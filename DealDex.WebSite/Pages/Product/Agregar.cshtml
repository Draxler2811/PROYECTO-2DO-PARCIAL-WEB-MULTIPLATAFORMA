@page
@model DealDex.WebSite.Pages.Product.Agregar

<div class="container-fluid">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10"></div>
        <h2>Agregar</h2>
        <form method="post">
            <input type="hidden"/>
            <div class="form-group">
                <label asp-for="ProductCategoryDtoAdd.Image"></label>
                <input asp-for="ProductCategoryDtoAdd.Image" class="form-control" maxlength="45"/>
                <span class="text-danger" asp-validation-for="ProductCategoryDtoAdd.Image"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductCategoryDtoAdd.Titulo"></label>
                <input asp-for="ProductCategoryDtoAdd.Titulo" class="form-control" maxlength="100"/>
                <span class="text-danger" asp-validation-for="ProductCategoryDtoAdd.Titulo"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductCategoryDtoAdd.Precio"></label>
                <input asp-for="ProductCategoryDtoAdd.Precio" class="form-control" maxlength="100"/>
                <span class="text-danger" asp-validation-for="ProductCategoryDtoAdd.Precio"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductCategoryDtoAdd.Descripcion"></label>
                <input asp-for="ProductCategoryDtoAdd.Descripcion" class="form-control" maxlength="100"/>
                <span class="text-danger" asp-validation-for="ProductCategoryDtoAdd.Descripcion"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductCategoryDtoAdd.IdCategory"></label>
                <input asp-for="ProductCategoryDtoAdd.IdCategory" class="form-control" maxlength="100"/>
                <span class="text-danger" asp-validation-for="ProductCategoryDtoAdd.IdCategory"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductCategoryDtoAdd.Estado"></label>
                <input asp-for="ProductCategoryDtoAdd.Estado" class="form-control" maxlength="100"/>
                <span class="text-danger" asp-validation-for="ProductCategoryDtoAdd.Estado"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="ProductCategoryDtoAdd.Ubicacion"></label>
                <input asp-for="ProductCategoryDtoAdd.Ubicacion" class="form-control" maxlength="100"/>
                <span class="text-danger" asp-validation-for="ProductCategoryDtoAdd.Ubicacion"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="ProductCategoryDtoAdd.IdSupplier"></label>
                <input asp-for="ProductCategoryDtoAdd.IdSupplier" class="form-control" maxlength="100"/>
                <span class="text-danger" asp-validation-for="ProductCategoryDtoAdd.IdSupplier"></span>
            </div>
            
           
            @if (Model.Errors.Count > 0)
            {
                <div class="alert alert-danger" role="alert">
                    <ul>
                        @foreach (var error in Model.Errors)
                        {
                            <li>An error</li>
                        }
                    </ul>
                </div>
            }
            <div class="row">
                <div class="col-md-12 text-right">
                    <button type="submit" class="btn btn-primary mr-3">Save</button>
                    <a class="btn btn-secondary">Cancel</a>
                </div>
            </div>
        </form>
    </div>
    <div>
        <div class="col-md-1"></div>
    </div>
</div>