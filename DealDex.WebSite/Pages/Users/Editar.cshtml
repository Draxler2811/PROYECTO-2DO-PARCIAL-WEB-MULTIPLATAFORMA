@page "{id:int}"
@model DealDex.WebSite.Pages.Users.Editar

<head>
    <link rel="stylesheet" href="~/css/Editar.css" />
</head>
<div class="container-fluid editar-page">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <h2>Editing</h2>
            <form method="post">
                <input type="hidden" asp-for="UsersCategoryDto.id"/>
                <div class="form-group">
                    <label asp-for="UsersCategoryDto.NombreUsu"></label>
                    <input asp-for="UsersCategoryDto.NombreUsu" class="form-control" maxlength="45" placeholder="Nombre de usuario"/>
                    <span class="text-danger" asp-validation-for="UsersCategoryDto.NombreUsu"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UsersCategoryDto.Correo"></label>
                    <input asp-for="UsersCategoryDto.Correo" class="form-control" maxlength="45" placeholder="Correo"/>
                    <span class="text-danger" asp-validation-for="UsersCategoryDto.Correo"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UsersCategoryDto.Contraseña"></label>
                    <input asp-for="UsersCategoryDto.Contraseña" class="form-control" maxlength="45" placeholder="Contraseña"/>
                    <span class="text-danger" asp-validation-for="UsersCategoryDto.Contraseña"></span>
                </div>
                @if (Model.Errors.Count > 0)
                {
                    <div class="alert alert-danger" role="alert">
                        <ul>
                            @foreach (var error in Model.Errors)
                            {
                                <li>@error</li>
                            }
                        </ul>
                    </div>
                }
                <div class="btn-container">
                    <button type="submit" class="btn btn-primary mr-3">Save</button>
                    <a class="btn btn-secondary" href="#">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
