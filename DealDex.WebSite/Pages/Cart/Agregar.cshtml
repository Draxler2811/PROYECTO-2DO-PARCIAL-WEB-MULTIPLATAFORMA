@page
@model DealDex.WebSite.Pages.Cart.Agregar

<div class="container-fluid">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10"></div>
        <h2>Agregar</h2>
        <form method="post">
            <input type="hidden"/>
            <div class="form-group">
                <label asp-for="CarritoCategoryDto.Titulo"></label>
                <input asp-for="CarritoCategoryDto.Titulo" class="form-control" maxlength="45"/>
                <span class="text-danger" asp-validation-for="CarritoCategoryDto.Titulo"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarritoCategoryDto.Image"></label>
                <input asp-for="CarritoCategoryDto.Image" class="form-control" maxlength="1000"/>
                <span class="text-danger" asp-validation-for="CarritoCategoryDto.Image"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarritoCategoryDto.Precio"></label>
                <input asp-for="CarritoCategoryDto.Precio" class="form-control" maxlength="45"/>
                <span class="text-danger" asp-validation-for="CarritoCategoryDto.Precio"></span>
            </div>
               <div class="form-group">
                                        <label asp-for="CarritoCategoryDto.Cantidad"></label>
                                        <input asp-for="CarritoCategoryDto.Cantidad" class="form-control" maxlength="45"/>
                                        <span class="text-danger" asp-validation-for="CarritoCategoryDto.Cantidad"></span>
                                    </div>
            <div class="form-group">
                <label asp-for="CarritoCategoryDto.IdProducto"></label>
                <input asp-for="CarritoCategoryDto.IdProducto" class="form-control" maxlength="45"/>
                <span class="text-danger" asp-validation-for="CarritoCategoryDto.IdProducto"></span>
            </div>
             <div class="form-group">
                            <label asp-for="CarritoCategoryDto.IdUser"></label>
                            <input asp-for="CarritoCategoryDto.IdUser" class="form-control" maxlength="45"/>
                            <span class="text-danger" asp-validation-for="CarritoCategoryDto.IdUser"></span>
                        </div>
           
            @if (Model.Errors.Count > 0)
            {
                <div class="alert alert-danger" role="alert">
                    <ul>
                        @foreach (var error in Model.Errors)
                        {
                            <li> @error</li>
                        }
                    </ul>
                </div>
            }
            <div class="row">
                <div class="col-md-12 text-right">
                    <button type="submit" class="btn btn-primary mr-3">Save</button>
                    <a class="btn btn-secondary">Cancel</a>
                </div>
            </div>
        </form>
    </div>
    <div>
        <div class="col-md-1"></div>
    </div>
</div>