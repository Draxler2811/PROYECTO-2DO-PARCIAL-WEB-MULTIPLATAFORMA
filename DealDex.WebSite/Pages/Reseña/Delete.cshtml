@page "{id:int}"
@model DealDex.WebSite.Pages.Reseña.Delete

<div class="resena-container">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-10">
                <h2>Delete</h2>
                <form method="post">
                    <input type="hidden" asp-for="ReseñaCategoryDto.id"/>
                    <div class="form-group">
                        <label asp-for="ReseñaCategoryDto.Titulo"></label>
                        <input readonly="" asp-for="ReseñaCategoryDto.Titulo" class="form-control" maxlength="45"/>
                    </div>
                    <div class="form-group">
                        <label asp-for="ReseñaCategoryDto.Valoracion"></label>
                        <input readonly="" asp-for="ReseñaCategoryDto.Valoracion" class="form-control" maxlength="100"/>
                    </div>
                    <div class="form-group">
                        <label asp-for="ReseñaCategoryDto.IdProducto"></label>
                        <input readonly="" asp-for="ReseñaCategoryDto.IdProducto" class="form-control" maxlength="100"/>
                    </div>
                    
                    @if (Model.Errors.Count > 0)
                    {

                    }
                    <div class="row">
                        <div class="col-md-12 text-right">
                            <button type="submit" class="btn btn-primary mr-3">Delete</button>
                                    <a asp-page="/Reseña/List" class="btn btn-success"> Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-md-1"></div>
        </div>
    </div>
</div>
