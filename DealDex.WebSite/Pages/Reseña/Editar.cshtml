@page "{id:int}"
@model DealDex.WebSite.Pages.Reseña.Editar

<div class="container-fluid">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10"></div>
        <h2>Editing</h2>
        <form method="post">
            <input type="hidden" asp-for="ReseñaCategoryDto.id"/>
            <div class="form-group">
                            <label asp-for="ReseñaCategoryDto.Titulo"></label>
                            <input asp-for="ReseñaCategoryDto.Titulo" class="form-control" maxlength="45"/>
                            <span class="text-danger" asp-validation-for="ReseñaCategoryDto.Titulo"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ReseñaCategoryDto.Valoracion"></label>
                            <input asp-for="ReseñaCategoryDto.Valoracion" class="form-control" maxlength="45"/>
                            <span class="text-danger" asp-validation-for="ReseñaCategoryDto.Valoracion"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ReseñaCategoryDto.IdProducto"></label>
                            <input asp-for="ReseñaCategoryDto.IdProducto" class="form-control" maxlength="45"/>
                            <span class="text-danger" asp-validation-for="ReseñaCategoryDto.IdProducto"></span>
                        </div>
            @if (Model.Errors.Count > 0)
            {
                @foreach (var error in Model.Errors)
                {
                    <li> @error</li>
                }
            }
            <div class="row">
                <div class="col-md-12 text-right">
                    <button type="submit" class="btn btn-primary mr-3">Save</button>
                    <a class="btn btn-secondary">Cancel</a>
                </div>
            </div>
        </form>
    </div>
    <div>
        <div class="col-md-1"></div>
    </div>
</div>