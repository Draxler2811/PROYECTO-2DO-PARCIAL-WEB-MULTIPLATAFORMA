@page
@model DealDex.WebSite.Pages.Login.LoginAgregar

@{
    Layout = "Shared/_Login";
}

<head>
    <link rel="stylesheet" href="~/css/Login.css" />
</head>
<div class="container-fluid login-page">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="logo-container">
                <img src="~/css/Logo.jpeg" alt="Logo" class="img-fluid" />
            </div>
            <h2>Add</h2>
            <form method="post">
                <input type="hidden" />
                <div class="form-group">
                    <input asp-for="UsersCategoryDto.NombreUsu" class="form-control" maxlength="45" placeholder="Nombre de usuario"/>
                    <span class="text-danger" asp-validation-for="UsersCategoryDto.NombreUsu"></span>
                </div>
                <div class="form-group">
                    <input asp-for="UsersCategoryDto.Correo" class="form-control" maxlength="45" placeholder="Correo"/>
                    <span class="text-danger" asp-validation-for="UsersCategoryDto.Correo"></span>
                </div>
                <div class="form-group">
                    <input asp-for="UsersCategoryDto.Contraseña" type="password" class="form-control" maxlength="45" placeholder="Contraseña"/>
                    <span class="text-danger" asp-validation-for="UsersCategoryDto.Contraseña"></span>
                </div>
                
                @if (Model.Errors.Count > 0)
                {
                    <div class="alert alert-danger">
                        <ul>
                            @foreach (var error in Model.Errors)
                            {
                                <li>@error</li>
                            }
                        </ul>
                    </div>
                }

                <div class="row">
                    <div class="col-md-12 text-right">
                        <button type="submit" class="btn btn-primary mr-3">Save</button>
                        <a asp-page="/Login/Login" class="btn btn-success">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>
    <!-- Agrega la imagen de fondo debajo de todo -->
    <img src="https://img.freepik.com/vector-premium/paginas-web-estan-pantalla-portatil-telefono-movil-mintiendo-tecnologia-moderna_593483-1027.jpg?w=996" alt="Fondo" class="background-image" />
</div>
