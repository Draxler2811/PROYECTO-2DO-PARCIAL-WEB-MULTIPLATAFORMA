@page
@model DealDex.WebSite.Pages.Category.Agregar

<div class="container-fluid">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10"></div>
        <h2>Agregar</h2>
        <form method="post">
            <input type="hidden"/>
            <div class="form-group">
                <label asp-for="CategoryTypeDto.Nombre"></label>
                <input asp-for="CategoryTypeDto.Nombre" class="form-control" maxlength="45"/>
                <span class="text-danger" asp-validation-for="CategoryTypeDto.Nombre"></span>
            </div>
            
            @if (Model.Errors.Count > 0)
            {
                <div class="alert alert-danger" role="alert">
                    <ul>
                        @foreach (var error in Model.Errors)
                        {
                            <li> @error</li>
                        }
                    </ul>
                </div>
            }
            <div class="row">
                <div class="col-md-12 text-right">
                    <button type="submit" class="btn btn-primary mr-3">Save</button>
                    <a class="btn btn-secondary">Cancel</a>
                </div>
            </div>
        </form>
    </div>
    <div>
        <div class="col-md-1"></div>
    </div>
</div>