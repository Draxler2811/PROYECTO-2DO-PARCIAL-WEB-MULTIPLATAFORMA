@page "{id:int}"
@model DealDex.WebSite.Pages.Category.Delete

<div class="container-fluid">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10"></div>
        <h2>Delete Product Category</h2>
        <form method="post">
            <input type="hidden" asp-for="CategoryTypeDto.id"/>
            <div class="form-group">
                <label asp-for="CategoryTypeDto.Nombre"></label>
                <input readonly="" asp-for="CategoryTypeDto.Nombre" class="form-control" maxlength="45"/>
            </div>
           @if (!ModelState.IsValid)
           {
               <div class="alert alert-danger">
                   <ul>
                       @foreach (var error in ModelState.Values.SelectMany(v => v.Errors))
                       {
                           <li>@error.ErrorMessage</li>
                       }
                   </ul>
               </div>
           }
            <div class="row">
                <div class="col-md-12 text-right">
                    <button type="submit" class="btn btn-primary mr-3">Delete</button>
                    <a class="btn btn-secondary">Cancel</a>
                </div>
            </div>
        </form>
    </div>
    <div>
        <div class="col-md-1"></div>
    </div>
</div>