@page "{id:int}"
@model DealDex.WebSite.Pages.Category.Editar

<div class="category-agregar-page">
    <div class="container">
        <h2 class="text-center">Editing</h2>
        <form method="post" class="text-center">
            <input type="hidden" asp-for="CategoryTypeDto.id" />
            <div class="form-group">
                <label asp-for="CategoryTypeDto.Nombre" class="form-label"></label>
                <input asp-for="CategoryTypeDto.Nombre" class="form-control" maxlength="45" />
                <span class="text-danger" asp-validation-for="CategoryTypeDto.Nombre"></span>
            </div>
            
            @if (Model.Errors.Count > 0)
            {
                <div class="alert alert-danger" role="alert">
                    <ul>
                        @foreach (var error in Model.Errors)
                        {
                            <li>@error</li>
                        }
                    </ul>
                </div>
            }
            <div class="row justify-content-center">
                <div class="col-md-6 text-center">
                    <button type="submit" class="btn btn-primary mr-3">Save</button>
                    <a href="#" class="btn btn-secondary">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>
