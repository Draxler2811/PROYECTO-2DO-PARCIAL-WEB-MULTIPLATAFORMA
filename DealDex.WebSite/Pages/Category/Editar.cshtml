@page "{id:int}"
@model DealDex.WebSite.Pages.Category.Editar

<div class="container-fluid">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10"></div>
        <h2>Editing</h2>
        <form method="post">
            <input type="hidden" asp-for="CategoryTypeDto.id"/>
           <div class="form-group">
                          <label asp-for="CategoryTypeDto.Nombre"></label>
                          <input asp-for="CategoryTypeDto.Nombre" class="form-control" maxlength="45"/>
                          <span class="text-danger" asp-validation-for="CategoryTypeDto.Nombre"></span>
                      </div>
            @if (Model.Errors.Count > 0)
            {
                @foreach (var error in Model.Errors)
                {
                    <li> @error</li>
                }
            }
            <div class="row">
                <div class="col-md-12 text-right">
                    <button type="submit" class="btn btn-primary mr-3">Save</button>
                    <a class="btn btn-secondary">Cancel</a>
                </div>
            </div>
        </form>
    </div>
    <div>
        <div class="col-md-1"></div>
    </div>
</div>