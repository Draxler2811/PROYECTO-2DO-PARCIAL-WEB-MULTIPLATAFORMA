@page "{id:int}"
@model DealDex.WebSite.Pages.Favorite.Editar

<div class="container-fluid">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10"></div>
        <h2>Editing</h2>
        <form method="post">
            <input type="hidden" asp-for="FavoriteProductDto.id"/>
              <div class="form-group">
                            <label asp-for="FavoriteProductDto.Titulo"></label>
                            <input asp-for="FavoriteProductDto.Titulo" class="form-control" maxlength="45"/>
                            <span class="text-danger" asp-validation-for="FavoriteProductDto.Titulo"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="FavoriteProductDto.Image"></label>
                            <input asp-for="FavoriteProductDto.Image" class="form-control" maxlength="1000"/>
                            <span class="text-danger" asp-validation-for="FavoriteProductDto.Image"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="FavoriteProductDto.Precio"></label>
                            <input asp-for="FavoriteProductDto.Precio" class="form-control" maxlength="45"/>
                            <span class="text-danger" asp-validation-for="FavoriteProductDto.Precio"></span>
                        </div>
                           <div class="form-group">
                                                    <label asp-for="FavoriteProductDto.Cantidad"></label>
                                                    <input asp-for="FavoriteProductDto.Cantidad" class="form-control" maxlength="45"/>
                                                    <span class="text-danger" asp-validation-for="FavoriteProductDto.Cantidad"></span>
                                                </div>
                        <div class="form-group">
                            <label asp-for="FavoriteProductDto.IdProducto"></label>
                            <input asp-for="FavoriteProductDto.IdProducto" class="form-control" maxlength="45"/>
                            <span class="text-danger" asp-validation-for="FavoriteProductDto.IdProducto"></span>
                        </div>
                         <div class="form-group">
                                        <label asp-for="FavoriteProductDto.IdUser"></label>
                                        <input asp-for="FavoriteProductDto.IdUser" class="form-control" maxlength="45"/>
                                        <span class="text-danger" asp-validation-for="FavoriteProductDto.IdUser"></span>
                                    </div>
            @if (Model.Errors.Count > 0)
            {
                 @foreach (var error in Model.Errors)
                                        {
                                            <li> @error</li>
                                        }

            }
            <div class="row">
                <div class="col-md-12 text-right">
                    <button type="submit" class="btn btn-primary mr-3">Save</button>
                    <a class="btn btn-secondary">Cancel</a>
                </div>
            </div>
        </form>
    </div>
    <div>
        <div class="col-md-1"></div>
    </div>
</div>